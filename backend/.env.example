# =====================================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# Fundación Genesis Empresarial - Sistema Bancario
# =====================================================

# Puerto del servidor
PORT=3000

# Configuración de Base de Datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=password
DB_NAME=genesis_bancario
DB_PORT=3306

# JWT Secret Key (Cambiar en producción por una clave segura)
JWT_SECRET=genesis_bancario_secret_key_2024_fundacion_empresarial_gt
JWT_EXPIRES_IN=24h

# Entorno de ejecución
NODE_ENV=development

# CORS - Dominios permitidos
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Configuración de logging
LOG_LEVEL=info

# Límite de intentos de login
MAX_LOGIN_ATTEMPTS=5
LOGIN_BLOCK_DURATION=15

# Configuración de archivos
MAX_FILE_SIZE=5242880

# Configuración de sesión
SESSION_SECRET=genesis_session_secret_2024
