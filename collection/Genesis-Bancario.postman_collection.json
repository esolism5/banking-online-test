{
  "info": {
    "name": "Genesis Bancario API",
    "description": "Colección de endpoints de la API REST del Sistema Bancario",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"maria.garcia@gmail.com\",\n  \"password\": \"Genesis2024!\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre_completo\": \"Juan Pérez\",\n  \"dpi\": \"1234567890123\",\n  \"email\": \"juan.perez@example.com\",\n  \"telefono\": \"12345678\",\n  \"direccion\": \"Guatemala City\",\n  \"fecha_nacimiento\": \"1990-01-01\",\n  \"password\": \"Genesis2024!\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/auth/verify",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "auth", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "Cuentas",
      "item": [
        {
          "name": "Obtener mis cuentas",
          "request": {
            "method": "GET",
            "header": [
